@model IEnumerable<ProjektMAS.Models.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Teams</h1>

<p>
    <a asp-action="Create">Create New Team</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Creation Date
            </th>
            <th>
                Team Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.CreationDate.Date.ToShortDateString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TeamID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TeamID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TeamID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
