@model IEnumerable<ProjektMAS.Models.MatchHall>

@{
    ViewData["Title"] = "Index";
}

<h1>List of MatchHalls</h1>

<p>
    <a asp-action="Create">Create New Hall</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SeatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HallName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HallName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MatchHallID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MatchHallID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MatchHallID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
